#!/bin/bash

# compile a setup's config/setup.yaml to agent.xml etc

SETUP=$1  # setup folder, eg 'setups/test/print-apply'

node pipeline/compiler/src/compile-xml.js \
  $SETUP/setup.yaml \
  $SETUP/volumes/agent/agent.xml

