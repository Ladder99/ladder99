#!/bin/bash
# tapedeck - play/record mqtt messages
# specify play/record as parameter, eg
#     shell/tapedeck play
#     shell/tapedeck record

export MODE=$1

HOST=host.docker.internal \
PORT=1883 \
FOLDER=/Users/bburns/Desktop/tapedeck \
LOOP=true \
docker-compose --file services/tapedeck/compose.yaml up --build $MODE
